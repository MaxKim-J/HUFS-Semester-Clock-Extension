{
  "name": "외대 종강시계",
  "description": "이 시계는 한국외대 학생들에게 종강이 몇 일 남았는지 보여줍니다. 종강 화이팅!",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "외대 종강시계",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "RELATIVE_PATH_TO_RESOURCE.EXTENTION"
  ],
  "chrome_url_overrides": {
    "newtab": "tab/tab.html"
  }
}